
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Règle de développement temporaire pour autoriser toutes les lectures et écritures.
    // AVERTISSEMENT : Ne jamais utiliser en production. À remplacer par des règles d'authentification.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
