rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Règle de développement : Accès public complet
    // ATTENTION : Cette règle est non sécurisée et ne doit être utilisée que pour le développement.
    // Elle permet à n'importe qui de lire et d'écrire dans votre base de données.
    // Pour la production, utilisez des règles basées sur l'authentification.
    // Par exemple : allow read, write: if request.auth != null;
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
