rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // ATTENTION : Ces règles sont ouvertes et conçues pour le développement.
    // Elles autorisent n'importe qui à lire et écrire dans votre base de données.
    // Vous devrez les sécuriser avec un système d'authentification
    // avant de mettre votre application en production.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
